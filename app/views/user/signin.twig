{% extends 'layouts/master' %}

{% block content %}
    {{ Form.open({ 'route': 'signin' }) }}
    <div class="field{{ errors.has('name')?' error' }}">
        {% if errors.has('name') %}<span>{{ errors.first('name') }}</span>{% endif %}
        {{ Form.label('email', trans("signin.email")) }}
        {{ Form.text('email') }}
    </div>
    <div class="field">
        {{ Form.label('password', trans('signin.password'))  }}
        {{ Form.text('password') }}
    </div>
    <div class="field">
        {{ Form.submit('Sign In') }}
    </div>
    {{ Form.close() }}
{% endblock %}